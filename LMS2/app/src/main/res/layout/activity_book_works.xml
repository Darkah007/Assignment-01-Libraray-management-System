<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library Operations"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:padding="16dp"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookList"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:layout_gravity="center_horizontal"
                android:onClick="viewBookList"
                android:src="@drawable/booklist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Book List"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/authorDetails"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:layout_gravity="center_horizontal"
                android:onClick="viewAuthorDetails"
                android:src="@drawable/writer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author Details"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookDetails"
                android:layout_width="wrap_content"
                android:layout_height="235dp"
                android:layout_gravity="center_horizontal"
                android:onClick="viewBookCopyDetails"
                android:src="@drawable/booklist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Book Copy Details"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/publisherDetails"
                android:layout_width="wrap_content"
                android:layout_height="235dp"
                android:layout_gravity="center_horizontal"
                android:onClick="viewPublisherDetails"
                android:src="@drawable/publishing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publisher Details"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </GridLayout>

</LinearLayout>
